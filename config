ngx_addon_name=ngx_http_shapow_module

SHAPOW_SRCS="                                                               \
        $ngx_addon_dir/src/ngx_http_shapow.c                                \
        "

SHAPOW_DEPS="                                                               \
        $ngx_addon_dir/src/config.h                                         \
        "

if [ -n "$ngx_module_link" ]; then
    ngx_module_type=HTTP_AUX_FILTER
    ngx_module_name=$ngx_addon_name
    ngx_module_incs=
    ngx_module_deps="$SHAPOW_DEPS"
    ngx_module_srcs="$SHAPOW_SRCS"
    ngx_module_libs=

    . auto/module
else
    HTTP_AUX_FILTER_MODULES="$HTTP_AUX_FILTER_MODULES $ngx_addon_name"
    NGX_ADDON_SRCS="$NGX_ADDON_SRCS $SHAPOW_SRCS"
    NGX_ADDON_DEPS="$NGX_ADDON_DEPS $SHAPOW_DEPS"
fi
